---

import "react-image-gallery/styles/css/image-gallery.css";
import * as indexSection from "../pages/sections/index.md";
import * as regular from "../pages/sections/regular-bathing-grooming-benefits.md";

import Slideshow from "../components/Slides";
import Layout from "../layouts/Layout.astro";
---

<style>
.image-gallery-thumbnails-container {
  position: absolute;
  left: 0;
  right: 0;
  width: max-content;
  }
</style>

<Layout title="All About Paws">
  <h2>All About Paws Pet Spa, LLC.</h2>
  <Slideshow 
    client:only={'preact'}
  />
  <div
    class="flex flex-col-reverse space-x-9 md:flex-row md:items-center md:justify-center md:space-x-0 md:space-y-4"
  >
    <article class="article">
      <indexSection.Content/>
    </article>

    <aside
      class="border-gray-200 mb-2 flex w-full
                flex-row items-start justify-between space-y-0
                border-b-2 md:mb-0 md:h-full md:w-auto md:flex-col md:space-y-6 md:border-b-0 md:border-l-2"
      style={{ marginLeft: "0 !important" }}
    >
      <a
        target="_blank"
        referrerpolicy={"no-referrer"}
        class="text-accent nav_link w-fit content-center items-center text-md md:w-full md:text-lg"
        href={import.meta.env.GOOGLE_REVIEWS_URL}
      >
        Reviews
      </a>
      <a
        target="_blank"
        referrerpolicy={"no-referrer"}
        class="text-accent nav_link w-fit content-center items-center text-center text-md md:w-full md:text-left md:text-lg"
        href={import.meta.env.GOOGLE_WRITE_REVIEW}
      >
        Write a Review
      </a>

      <div
        class="hidden h-px w-full border-b-2 border-dashed border-b-gray-dark md:block"
      >
        <br />
      </div>

      <iframe
        class="hidden md:block"
        sandbox="allow-scripts allow-popups allow-forms allow-same-origin allow-popups-to-escape-sandbox allow-downloads allow-modals"
        aria-label="Map, 16329 Co Rd V"
        src="https://maps-api-ssl.google.com/maps?hl=en&ll=40.305269,-103.844805&output=embed&q=16329+Co+Rd+V,+Fort+Morgan,+CO+80701,+USA+(16329+Co+Rd+V)&z=16"
        allowfullscreen=""></iframe>
      <a
        class="text-green-600 nav_link w-fit content-center items-center text-center text-md md:w-full md:text-left md:text-lg"
        href={import.meta.env.GOOGLE_DIRECTION_URL}
        target="_blank"
        referrerpolicy={"no-referrer"}
      >
        Get Directions
      </a>
    </aside>
  </div>

  <section>
    <h2>benefits of regular bathing &#38; Grooming</h2>
    <div
      class="equal-columns mt-6 flex flex-col items-center gap-4 lg:flex-row"
    >
      <img
        class="w-full md:w-1/4 md:mb-0 md:mr-4"
        src="/assets/images/sitting_dog.png"
        loading="lazy"
        alt=""
      />

        <article class="article text-center">
         <regular.Content/>
        </article>

      <img
        class="w-full md:w-1/4 md:mb-0 md:mr-4"
        src="/assets/images/sitting_cat.png"
        loading="lazy"
        alt=""
      />
    </div>
  </section>

  {/* Move above content to a table format */}
</Layout>
