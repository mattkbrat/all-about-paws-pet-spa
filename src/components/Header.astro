---
import Logo from "./logo.astro";
import { Nav } from "./Nav";

const route = Astro.url;
---

<nav id="main_nav" class={"font-bold px-4 py-2 w-full sticky flex flex-row z-50 text-lg lg:text-left md:text-current transition-all top-0 bg-black/10 backdrop-blur-md"}>
  <div class="min-w-max flex  text-wrap  gap-x-2">
    <a href="/" class="">
       <Logo /> 
    </a>
    <div>
        <h1 class="break-words max-w-[60dvw] ">All About Paws Pet Spa, LLC.</h1>
        <p class="text-sm">Fort Morgan Grooming</p>
    </div>
  </div>
  <div class="ml-auto relative lg:self-end">
    <Nav route={route.pathname} client:visible />
  </div>
</nav> 
