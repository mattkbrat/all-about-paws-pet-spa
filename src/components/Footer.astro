---
import InstagramProfile from "./links/InstagramProfile.astro";
import GoogleProfile from "./links/GoogleProfile.astro";
import FooterContent from "./FooterContent.astro";
---

<footer class="flex accent justify-center ">
  <div id='footer-content' class='max-w-6xl flex justify-around w-full items-center gap-x-4 gap-y-2 '>

  <div id="content" class="w-full flex items-center gap-x-2">
    <div class="flex  flex-col lg:flex-row ">
      <FooterContent />
    </div>
  </div>
      <GoogleProfile />
      <InstagramProfile />
  </div>
</footer>




<style>

  #footer-content {
    display: grid;
    grid-template-areas: "content google" "content instagram" ;
    @media (width > 1000px) {
    grid-template-areas: "instagram content google";
      
    }
  }

  #content {
    grid-area: content;
  }


</style>
