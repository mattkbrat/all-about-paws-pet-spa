---
import InstagramProfile from "./links/InstagramProfile.astro";
import GoogleProfile from "./links/GoogleProfile.astro";
import FooterContent from "./FooterContent.astro";
---

<footer class="justify-center accent">
  <!-- Standard Sizes -->
  <div
    class="justify-between px-4 align-middle flex-1 xl:grid xl:grid-cols-[1fr,auto,1fr] xl:grid-rows-1 hidden"
  >
    <div class="ml-16 mr-auto my-auto">
      <GoogleProfile />
    </div>
    <section
      class="my-4 flex flex-1 flex-col place-content-between items-center space-y-6 text-center md:flex-row md:space-y-0 xl:max-w-6xl"
    >
      <FooterContent />
    </section>
    <div class="mr-16 ml-auto my-auto">
      <InstagramProfile />
    </div>
  </div>
  <!-- Mobile  -->
  <div class="grid lg:hidden items-center text-center gap-4">
    <FooterContent />
    <div class="flex mx-auto gap-x-4">
      <GoogleProfile />
      <InstagramProfile />
    </div>
  </div>
</footer>

<style>
  .footer {
    border-block: 1px solid #494948;
    font-size: var(--small-font);
    background: rgba(var(--accent-bg), 60%);
  }

  .footer_content {
    grid-column: 2;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    vertical-align: top;
    background-color: #f9d1c6;
    color: #494948;
    margin-inline: 3vw;
    padding-inline: 3vw;
  }

  .footer_content table {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    vertical-align: top;
    background-color: #f9d1c6;
    color: #494948;
  }
</style>
