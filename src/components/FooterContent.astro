---
const { GOOGLE_DIRECTION_URL } = import.meta.env;
---

<section class="flex-1 flex-wrap">
  <h3 class="font-bold text-lg underline">Hours</h3>
  <div class="grid grid-cols-2 md:grid-cols-1 lg:grid-cols-2">
    <span class="font-bold lg:my-auto">M - F</span>
    <span>7:00am - 4:00pm</span>
    <span class="font-bold lg:my-auto">Saturday</span>
    <span>8:00am - 2:00pm</span>
    <span class="font-bold lg:my-auto">Sunday</span>
    <span>Closed</span>
  </div>
</section>
<section class="flex-1 flex-wrap">
  <h3 class="font-bold text-lg underline">Location</h3>
  <span class="flex flex-col">
    <span class="flex flex-wrap gap-x-1 lg:w-max">
      <span class="w-fit flex">
        <span class="w-max"> 16329 County Road V</span>
        <span class="block sm:hidden md:block">,</span>
      </span>
      <span class="w-fit flex sm:hidden md:flex">
        <span>Fort Morgan</span>
        <span class="hidden md:block">,</span>
      </span>
      <span class="w-fit hidden md:block">80701</span>
    </span>
    <a
      class="min-w-max underline link"
      href={GOOGLE_DIRECTION_URL}
      target="_blank"
      referrerpolicy={"no-referrer"}
      rel="noreferrer"
    >
      Get Directions
    </a>
  </span>
</section>
<section class="flex-1 flex-wrap">
  <h3 class="font-bold text-lg underline">Contact</h3>
  <a
    href=`tel:+${import.meta.env.PHONE.replace(/\D/g, '')}`
    class="flex flex-wrap items-center gap-x-1 justify-center"
  >
    <span>Call me at</span>
    <span class="link w-max">
      {import.meta.env.PHONE}
    </span>
  </a>
  <p>
    <a class="link" href={"mailto:" + import.meta.env.CONTACT_EMAIL}>
      Email
      <!-- {import.meta.env.CONTACT_EMAIL_SPACED} -->
    </a>
  </p>
</section>
