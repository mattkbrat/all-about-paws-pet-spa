---
import Attribution from "../components/Attribution.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;

import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Header from "../components/Header";
---

<!doctype html>
<html lang="en" class="flex">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
  <div class="flex flex-col min-h-screen justify-between">

    <!--<Navigation/>-->
    <Hero />
    <Header
      GOOGLE_DIRECTION_URL={import.meta.env.GOOGLE_DIRECTION_URL}
      client:visible
    />
    <main
      class="flex justify-center 2xl:text-xl items-start"
    >
      <div id="main" class="max-w-6xl flex flex-col gap-4">
        <slot />
      </div>
    </main>
    <Footer />
    </div>
  <Attribution/>
  </body>
</html>

<style is:global lang="scss">
  @font-face {
    font-family: "Noto Sans Regular";
    src: url("/assets/fonts/NotoSans/NotoSansDisplay-Regular.ttf")
      format("truetype");
  }

  @font-face {
    font-family: "Noto Sans Condensed";
    src: url("/assets/fonts/NotoSans/NotoSansDisplay_Condensed-Light.ttf")
      format("truetype");
  }


  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    --large-font: clamp(1.2rem, 2.5vw, 1.8rem);
    --normal-font: clamp(1rem, 2.5vw, 1.2rem);
    --small-font: clamp(0.8rem, 2.5vw, 1rem);
    --accent-bg: 250, 208, 197;
  }
  html {
    font-family: "Noto Sans Regular", sans-serif;
    background-color: #efece9;
    color: #1a1a1a;
    /* font-size: 150%; */
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  #main {
    background: white;
    margin: 2rem;
    padding: 2rem;
  }

  #main h2 {
    font-size: 2rem;
    font-family: "Oswald", sans-serif;
    text-transform: uppercase;
    text-align: center;
  }

  h3 {
    font-size: var(--large-font) !important;
    font-family: "Oswald", sans-serif;
    text-transform: uppercase;
  }

  .accent {
    background: rgba(var(--accent-bg), 60%);
    padding-inline: 2rem;
    padding-block: 1rem;
    margin: 0;
  }

  .text-accent {
    color: rgb(var(--accent));
  }

  .frame {
    border: 1px solid #1a1a1a;
    border-radius: 0.5rem;
    padding: 1rem;
  }

  aside {
    font-family: "Noto Sans Condensed", sans-serif;
  }

.image-gallery-thumbnails-container {
  position: absolute !important;
  left: 0 !important;
  right: 0 !important;
  width: 100% !important;
  }


@media (max-width:480px)  { 
/* smartphones, Android phones, landscape iPhone */ 

.image-gallery-thumbnails-wrapper { 
  display: none
}
}

</style>
