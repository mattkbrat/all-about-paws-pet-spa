
---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Hero/>
		<Navigation/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>

	@font-face {
		font-family: 'Noto Sans Regular';
		src: url('/assets/fonts/NotoSans/NotoSansDisplay-Regular.ttf') format('truetype');
	}

	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--large-font: clamp(1.5rem, 2.5vw, 2.5rem);
		--normal-font: clamp(1rem, 2.5vw, 1.5rem);
		--small-font: clamp(0.75rem, 2.5vw, 1rem);
	}
	html {
		font-family: 'Noto Sans Regular', sans-serif;
		background-color: #efece9;
		color: #1a1a1a;
		/* font-size: 150%; */
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	.column {
		display: flex;
		flex-direction: column;
	}

	.column > * {
		margin-inline: 1rem;
	}

	.stack {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.flex {
		display: flex;
	}


	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		grid-gap: 1rem;
	}

	.spacer {
		margin: 1rem;
	}

	.frame {
		border: 1px solid #1a1a1a;
		border-radius: 0.5rem;
		padding: 1rem;
	}

	.center {
		text-align: center;
	}

	.no-bullets {
		list-style: none;
	}

	.accent {
		background-color: #f9d1c6;
	}

	.align-right {
		text-align: right;
	}

	.align-left {
		text-align: left;
	}

	.align-center {
		text-align: center;
	}

	.disclaimer {
		font-size: 0.75rem;
	}

	.subheading {
		font-size: 115%;

	}

	
	@media (min-width: 768px) {
		.column {
			flex-direction: row;
			margin: auto;
			text-align: center;
			justify-content: center;

			& > * {
				margin: 0 1rem;
				align-items: center;
				justify-content: center;
			}

			footer_column {
				display: -moz-inline-grid;
				display: inline-grid;
			}

		}
	}
</style>
